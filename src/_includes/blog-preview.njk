<li class="blog-li">
    <a href="{{ post.url | url }}">
        <img src="{{ post.data.image }}" alt="Blog post image" class="blog-image">
        <div class="text-contents">
            <h6 class="text">{{ post.date | postDate }}</h6>
            <h4 class="title">{{ post.data.title }}</h4>
            <h6 class="text">{{ post.preview }}</h6>
        </div>
    </a>
</li>